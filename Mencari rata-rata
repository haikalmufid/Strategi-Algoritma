print("Mencari Nilai Rata - rata")
print("=========================")
  
n = int(input("Masukkan banyak data : "))

print()

print("Masukkan angka yang ingin diinputkan")
x = []
for i in range(n):
  print("Angka ke-", i+1, " : ", sep='', end='')
  x.append(int(input()))

print()

total = 0
for i in range(n):
  total = total+x[i]

rata2 = round(total/n,2)
 
print("Nilai rata-rata : ", rata2)
print("Nilai terbesar  : ", max(x))
